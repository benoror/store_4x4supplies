<h1>Nuevo cliente</h1>

<% form_for(@customer) do |f| %>

  <div id="submenu">
    <%= f.submit 'Guardar Cliente' %>
  </div>

  <table>

  <caption>
    <%= f.error_messages %>
  </caption>

  <tbody>
    <tr>
      <th width="25%"><%= f.label 'Nombre completo' %></th>
      <td><%= f.text_field :fullname, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'R.F.C.' %></th>
      <td><%= f.text_field :ssn, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'Direccion 1' %></th>
      <td><%= f.text_field :address1, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'Direccion 2' %></th>
      <td><%= f.text_field :address2, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'Telefono(s)' %></th>
      <td><%= f.text_field :telephone, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'Email' %></th>
      <td><%= f.text_field :email, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'Vehiculo(s)' %></th>
      <td><%= f.text_field :vehicle, :size => 50 %></td>
    </tr>
    <tr>
      <th><%= f.label 'Club' %></th>
      <td><%= f.text_field :club, :size => 50 %></td>
    </tr>
  </tbody>

  </table>

<% end %>
