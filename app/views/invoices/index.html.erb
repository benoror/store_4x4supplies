<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Place</th>
    <th>Date</th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr title="Creo: <%= invoice.who %> Actualizo: <%= invoice.who_last %>">
    <td><%=h invoice.customer_id %></td>
    <td><%=h invoice.place %></td>
    <td><%=h invoice.date %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New invoice', new_invoice_path %>
