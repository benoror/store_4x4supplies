<h1>
	<%= Category.find_by_id(params[:cat]).name if params[:cat]%>
	<%= 'Novedades' unless params[:cat]%>	
</h1>
<h2>

</h2>

<h3><%= Category.find_by_id(params[:cat]).description if params[:cat]%></h3>
<br />

<% paginated_section @inventories, { :previous_label => '&lt;', :next_label => '&gt;' } do %>

<table>

<thead>
  <tr>
    <th>Productos</th>
  </tr>
</thead>

<tbody>
<% @inventories.each do |inventory| %>
  <tr>
    <td>
      <%= link_to image_tag('products/'+inventory.product.image, :class => 'store_image'), '/images/products/'+inventory.product.image  %>
      <span class="store_product"><%= inventory.product.name %></span><br />
      <%= inventory.product.description %><br />
    </td>
  </tr>
<% end %>
</tbody>

</table>

<% end %>

<br />
<% if params[:cat] %>
	<h4 style="background-color:yellow;" align="center"> Danos tu modelo y preguntanos por mas <%= Category.find_by_id(params[:cat]).name %> y accesorios para tu 4x4 !!</h4>
<% end %>